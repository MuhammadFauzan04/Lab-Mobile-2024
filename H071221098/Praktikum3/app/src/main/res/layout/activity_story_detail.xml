<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storiesDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryDetail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/story">

        <ImageView
            android:id="@+id/iv_storydetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ojannn"
            android:layout_margin="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profilestory"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/ojan"/>

        <TextView
            android:id="@+id/tv_unamestory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="faauuuzan"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/baseline_menu_24"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_clear_24"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/baseline_favorite_24"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/baseline_menu_24"/>



        </LinearLayout>



    </FrameLayout>



</LinearLayout>